FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     foamRun;

solver          incompressibleFluid;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         50;

deltaT          10;

writeControl    runTime;

writeInterval   1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

timeFormat      general;

timePrecision   6;

runTimeModifiable    true;

// ************************************************************************* //

functions
{
    minmaxScalar
    {
        type            volFieldValue;
        libs            ("libfieldFunctionObjects.so");
        log             true;
        writeControl    timeStep;
        writeFields     false;
        select          all;
        operation       none;

        fields
        (
            p
        );
    }

    minmaxVector
    {
        type            volFieldValue;
        libs            ("libfieldFunctionObjects.so");
        log             true;
        writeControl    timeStep;
        writeFields     false;
        select          all;
        operation       none;

        fields
        (
            U
        );
    }

    minVelocity
    {
        $minmaxVector;
        operation       minMag;
    }

    maxVelocity
    {
        $minmaxVector;
        operation       maxMag;
    }

    minPressure
    {
        $minmaxScalar;
        operation       min;
    }

    maxPressure
    {
        $minmaxScalar;
        operation       max;
    }
}